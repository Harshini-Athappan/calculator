import java.io.*;
import java.util.Scanner;

public class SInterest
{
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter the principal,no.of years,interest values:");
	float p,n,r;
	p=sc.nextFloat();
	n=sc.nextFloat();
	r=sc.nextFloat();
	float si;
	si=(p*n*r)/100;
	System.out.println(si);
  }
}
